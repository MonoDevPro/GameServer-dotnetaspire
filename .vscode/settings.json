{
    "dotnet.defaultSolution": "GameServer.sln",
    // Omnisharp no .NET Modern
    "omnisharp.useModernNet": true,
    // Formatação automática ao salvar
    "editor.formatOnSave": true,
    // Organizar usings e remover usings não usados
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit",
        "source.fixAll": "explicit"
    },
    // Habilita semantic highlighting
    "editor.semanticHighlighting.enabled": true,
    // Qualidade de snippet de XML Docs
    "csharp.xmlDocComments.enabled": true,
    // Ignora warning de instalação do .NET
    "csharp.suppressDotnetInstallWarning": true,
    // Configurações de indentação e estilo
    "[csharp]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },
    // IntelliCode
    "editor.suggestSelection": "recentlyUsedByPrefix",
    "editor.inlineSuggest.enabled": true,
    // Ajuste de performance
    "omnisharp.loggingLevel": "Warning",
    "omnisharp.maxProjectResults": 250
}